{
  "private": true,
  "name": "PostCSS",
  "homepage": "http://postcss.org/",
  "googleAnalyticsUA": "UA-73693753-1",
  "twitter": "PostCSS",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore . && stylelint web_modules/**/*.css",
    "eslint-staged": "eslint-staged",
    "stylelint-staged": "stylelint-staged",
    "svgo-staged": "./scripts/svgo.sh",
    "statinamic": "cross-env BABEL_ENV=statinamic DEBUG=statinamic:* babel-node scripts/build",
    "start": "npm run statinamic -- --server --open --dev",
    "build": "npm run statinamic -- --static --production",
    "pretest": "npm run lint",
    "test": "npm run build",
    "styleguide-server": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "predeploy": "npm run build",
    "deploy": "./scripts/deploy.sh"
  },
  "statinamic": {
    "assets": false,
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "statinamic": {
        "plugins": [
          [
            "babel-plugin-webpack-loaders",
            {
              "config": "./scripts/webpack.config.babel.js",
              "verbose": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "pre-commit": [
    "eslint-staged",
    "stylelint-staged",
    "svgo-staged"
  ],
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-webpack-loaders": "^0.3.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "cross-env": "^1.0.7",
    "css-loader": "^0.17.0",
    "eslint": "^1.10.3",
    "eslint-config-i-am-meticulous": "^2.0.0",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-react": "^3.14.0",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.5",
    "fontfaceobserver": "^1.6.3",
    "highlight.js": "^8.9.1",
    "imports-loader": "^0.6.5",
    "invariant": "^2.2.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^0.1.1",
    "markdown-it": "^5.0.3",
    "markdown-it-toc-and-anchor": "^1.0.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.7.0",
    "pre-commit": "^1.1.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-google-analytics": "^0.2.0",
    "react-helmet": "^2.2.0",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0",
    "react-styleguidist": "^1.3.2",
    "redux": "^3.0.0",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "redux-thunk": "^1.0.3",
    "statinamic": "^0.7.0",
    "style-loader": "^0.12.4",
    "stylelint": "^4.0.0",
    "stylelint-config-standard": "^2.0.0",
    "svgo": "^0.6.1",
    "webpack": "^1.12.9",
    "whatwg-fetch": "^0.9.0"
  },
  "dependencies": {
    "react-highlight": "^0.6.1",
    "whatwg-fetch": "^0.9.0"
  }
}
